# Environment Variables Template
# Copy this file to .env and fill in your actual API keys and settings

# API Keys (Required for external services)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo

# Vector Database Settings
VECTOR_DB_TYPE=faiss
FAISS_INDEX_PATH=./embeddings/faiss_index.bin
EMBEDDINGS_PATH=./embeddings/embeddings.pkl
METADATA_PATH=./embeddings/metadata.json

# Text Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000

# Data Directory
DATA_DIR=./data

# Retrieval Settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Agent Behavior
TEMPERATURE=0.7
MAX_RETRIES=3